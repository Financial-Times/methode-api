http:
  port: 8080
  adminPort: 8081
  requestLog:
    file:
      enabled: true
      timeZone: UTC
      currentLogFilename: /var/log/apps/methode-api-dw-access.log
      archive: true
      archivedLogFilenamePattern: /var/log/apps/methode-api-dw-access-%d.log.gz
      archivedFileCount: 5
    console:
      enabled: false
methodeConnection:
  hostName: <%=scope.function_hiera('methodeHostName')%>
  nsPort: <%=scope.function_hiera('methodeNameServicePort')%>
  userName: <%=scope.function_hiera('methodeUsername')%>
  password: <%=scope.function_hiera('methodePassword')%>
  connectTimeout: 2000
  pool:
    size: 10
    timeout: 1900ms
methodeTestConnection:
  hostName: <%=scope.function_hiera('methodeHostName')%>
  nsPort: <%=scope.function_hiera('methodeNameServicePort')%>
  userName: <%=scope.function_hiera('methodeTestUsername', 'app-methodeAPI')%>
  password: <%=scope.function_hiera('methodeTestPassword', 'methodeapi')%>
  connectTimeout: 2000
  pool:
    size: 2
    timeout: 4000ms

swaggerConfiguration:
  apiVersion: 1.0
  basePath: <%=scope.function_hiera('basePath')%>

maxPingMillis: 2000

atc:
    iAm: <%=scope.function_hiera('localDataCentre')%>
    hostnames:
    <% if scope.function_hiera('watfordDataCentreHostname','null') %>
        WATFORD: <%=scope.function_hiera('watfordDataCentreHostname','null')%>
    <% end %>
    <% if scope.function_hiera('parkRoyalDataCentreHostname','null') %>
        PARK_ROYAL: <%=scope.function_hiera('parkRoyalDataCentreHostname','null')%>
    <% end %>
        ACTIVE: <%=scope.function_hiera('activeDataCentreHostname')%>

logging:
  file:
    threshold: INFO
    enabled: true
    timeZone: UTC
    currentLogFilename: /var/log/apps/methode-api-dw-app.log
    archive: true
    archivedLogFilenamePattern: /var/log/apps/methode-api-dw-app-%d.log.gz
    archivedFileCount: 5
    logFormat: "%-5p [%d{ISO8601, GMT}] %c: %X{transaction_id} %m [%thread]%n%xEx"
  console:
    enabled: false
  loggers:
    "com.sun.jersey.spi.container.ContainerResponse": OFF
    "com.ft.methodeapi.service.methode.connection.MethodeConnectionAllocator" : DEBUG
    "com.ft.methodeapi.service.methode.connection.PoolingMethodeObjectFactory" : DEBUG
